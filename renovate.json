{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:allNonMajor"
    ],
    "labels": [
        "dependencies"
    ],
    "bumpVersion": "patch",
  {
    "packageRules": [
      {
        "matchPackagePatterns": [
          "*"
        ],
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "groupName": "all non-major dependencies",
        "groupSlug": "all-minor-patch"
      }
    ]
  }
}
